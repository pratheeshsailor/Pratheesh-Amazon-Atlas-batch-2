@startuml
class Customer {
    +customerID: int
    +name: String
}

class Account {
    +accountID: int
    +balance: float
}

class Transaction {
    +transactionID: int
    +transactionType: String
    +amount: float
    +date: Date
}

class AuditLog {
    +logID: int
    +action: String
    +timestamp: DateTime
    +userID: int
    +transactionID: int
    +recordAction(action: String): void
}

